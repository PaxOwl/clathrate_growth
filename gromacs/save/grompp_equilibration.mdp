; RUN CONTROL PARAMETERS
integrator               = md
dt                       = 0.001
nsteps                   = 10000000
comm-mode                = linear

; OUTPUT CONTROL OPTIONS
nstxout                  = 10000
nstvout                  = 0
nstlog                   = 10000
nstenergy                = 10000

; NEIGHBORSEARCHING PARAMETERS
cutoff-scheme            = verlet
nstlist                  = 10
verlet-buffer-tolerance  = 0.001
ns-type                  = grid
pbc                      = xyz
periodic-molecules       = no

; OPTIONS FOR ELECTROSTATICS
coulombtype              = PME
rcoulomb                 = 1.5
fourierspacing           = 0.15
pme-order                = 4

; OPTIONS FOR VDW
vdw-type                 = cut-off
rvdw                     = 1.5
DispCorr                 = EnerPres

; OPTIONS FOR WEAK COUPLING ALGORITHMS
tcoupl                   = berendsen
tc-grps                  = system
tau-t                    = 0.1
ref-t                    = 373
pcoupl                   = berendsen
pcoupltype               = isotropic
tau-p                    = 1.0
ref-p                    = 20.0
compressibility          = 1.0e-6

; SIMULATED ANNEALING CONTROL
annealing                = no

; GENERATE VELOCITIES FOR STARTUP RUN
gen-vel                  = yes
gen-temp                 = 373

; OPTIONS FOR BONDS
constraints              = all-angles
constraint-algorithm     = LINCS
lincs-order              = 4
lincs-iter               = 1

